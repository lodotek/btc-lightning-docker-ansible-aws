[lightning]
ec2-instance ansible_host=<YOUR_EC2_IP> ansible_connection=ssh ansible_ssh_common_args='-o StrictHostKeyChecking=no' ansible_user=ubuntu ansible_ssh_private_key_file=~/.ssh/<YOUR_KEYPAIR_NAME>.pem ansible_python_interpreter=/usr/bin/python3

